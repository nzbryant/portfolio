<h1>Quiz: <%= @quiz.title %></h1>
<h2>Subcategory: 
  <% unless @subcategory.blank? %><%= @subcategory.name %><% end %>
</h2>

<form method="get" action="/quizzes/<%= @quiz.id %>/check_answers">
<table class="table table-striped">
  <thead>
    <tr>
      <th class="th-categ-name">Question</th>
      <th class="th-categ-name">Choice of Answers</th>
     
    </tr>
  </thead>

  <tbody>
    <% for question in @quiz.questions %>
      <tr>
        <td>
          <%= question.text %>
        </td>
        <td>
          <% question.answers.each do |answer| %>
             <input type="radio" id="answer_<%= answer.id %>" name="<%= question.id %>" value="<%= answer.id %>" checked = true>
             &nbsp; <%= answer.text %><br>
             
          
            <!--%= link_to quiz.title, quiz_path(quiz) %-->
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  <p>
    <input type="submit" value="Check your answers">
  </p>
  </form>

